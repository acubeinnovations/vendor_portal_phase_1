<div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <div class="widget-box">
          <div class="widget-content nopadding">
            <table class="table table-bordered data-table">
              <thead>
                <tr>
                  <th>Sl</th>
                  <th>Brand Name</th>
                  <th>Created Date</th>
                  <th colspan='2'>Actions</th>
                </tr>
              </thead>
              <tbody>
								<% @i=1 %>
								<% @brands.each do |brand| %>
									<tr class="gradeX">
										<td><%= @i %></td>
										<td><%= brand.name %></td>
										<td><%= brand.created_at.strftime("%d %b %Y,%T") %></td>
										<td><div style="text-align:center;"><%= link_to 'Edit', edit_brand_path(brand),class:'btn btn-warning' %></div></td>
										<td><div style="text-align:center;"><%= link_to 'Delete', brand, method: :delete, data: { header:"Brand",confirm:(brand.name)},class:'btn btn-danger' %></div></td>
									</tr>
									<% @i+=1%>
								<% end %>	
							</tbody>
            </table>
				
         	</div>
       </div>
   </div>
			<%= link_to 'New Brand', new_brand_path ,class:'btn btn-success' %>
</div>

