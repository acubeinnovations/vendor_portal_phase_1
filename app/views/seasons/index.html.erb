<div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <div class="widget-box">
          <div class="widget-content nopadding">
            <table class="table table-bordered data-table">
              <thead>
                <tr>
                  <th>Sl</th>
                  <th>Season Name</th>
                  <th>Created Date</th>
                  <th colspan='2'>Actions</th>
                </tr>
              </thead>
              <tbody>
								<% @i=1 %>
								<% @seasons.each do |season| %>
									<tr class="gradeX">
										<td><%= @i %></td>
										<td><%= season.name %></td>
										<td><%= season.created_at.strftime("%d %b %Y,%T") %></td>
										<td><div style="text-align:center;"><%= link_to 'Edit', edit_season_path(season),class:'btn btn-warning' %></div></td>
										<td><div style="text-align:center;"><%= link_to 'Delete', season, method: :delete, data: { header:"Season",confirm:(season.name)+' ?'},class:'btn btn-danger' %>
									
										
										
										</div></td>
									</tr>
									<% @i+=1%>
								<% end %>	
							</tbody>
            </table>
				
         	</div>
       </div>
   </div>
			<%= link_to 'New Season', new_season_path ,class:'btn btn-success' %>
</div>

