<div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <div class="widget-box">
          <div class="widget-content nopadding">
            <table class="table table-bordered data-table">
              <thead>
                <tr>
                  <th>Sl</th>
                  <th>Name</th>
                  <th>Descriptions</th>
									
                  <th colspan='3'>Actions</th>
                </tr>
              </thead>
              <tbody>
								<% @i=1 %>
								<% @divisions.each do |division| %>
									<tr class="gradeX">
										<td><%= @i %></td>
										<td><%= division.name %></td>
										<td><%= division.description %></td>
									
										<td><%= link_to 'Edit', edit_division_path(division),class:'btn btn-info' %></td>
										<td><%= link_to 'Destroy', division, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger' %></td>
									</tr>
									<% @i+=1%>
								<% end %>	
							</tbody>
            </table>
				
         	</div>
       </div>
   </div>
			<%= link_to 'New Division', new_division_path ,class:'btn btn-success' %>
</div>
