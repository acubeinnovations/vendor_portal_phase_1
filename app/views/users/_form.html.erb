<%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
  <% if @user.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
	  
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
	
  <% end %>

  
  
  
  
  
  
  	<div class="widget-box">
  		<div class="control-group">
  		<label class="control-label">Email</label>
  			<div class="controls">
  					<%= f.text_field :email, class:"span6",placeholder:"Email" %>
  			</div>
  		</div>
  		<div class="control-group">
  		<label class="control-label">Password</label>
  			<div class="controls">
  					<%= f.text_field :password, class:"span3",placeholder:"Password" %>
  			
  					<%= f.text_field :password_confirmation, class:"span3",placeholder:"Confirm Password" %>
  			</div>
    	</div>
  		<div class="control-group">
  		<label class="control-label">First Name</label>
  			<div class="controls">
  					<%= f.text_field :firstname, class:"span6",placeholder:"First Name" %>
  			</div>
    	</div>
  		<div class="control-group">
  		<label class="control-label">Last Name</label>
  			<div class="controls">
  					<%= f.text_field :lastname, class:"span6",placeholder:"Last Name" %>
  			</div>
    	</div>
  		<div class="control-group">
  		<label class="control-label">User Role</label>
  			<div class="controls">
  					<%= f.collection_select :userrole,Usertype.all,:id,:userrole,{class: "span6"} %>
					
  			</div>
    	</div>
		
		
		
		
		
		
  	<div class="form-actions">
  		<%= f.submit 'Save', :class => 'btn btn-success btn-xs' %>
  	</div>  
  </div>
  
<% end %>
