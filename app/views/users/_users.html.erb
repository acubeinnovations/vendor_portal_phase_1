<table class="table table-bordered data-table">
	<thead>
		<tr>
			<th>Sl</th>
			<th>Name</th>
			<th>Role</th>
			<th>Email id</th>
			<th>Last Login</th>
			<th colspan="2">Actions</th>
		</tr>
	</thead>
	<tbody>
		
		<% @users.each do |user| %>
		<tr class="gradeX">
			<td class="center"> <%=@slno %></td>
			<td><%= user.lastname %> <%= user.firstname %></td>
			<td><%= user.userrole %></td>
			<td><%= user.email %></td>
			<td>
<%= user.last_sign_in_at.present? ? user.last_sign_in_at.strftime("%d %b %Y,%T") : user.last_sign_in_at%>				
			
			</td>
			<!--	<td><%= link_to 'Show', user, :class => 'btn btn-primary btn-xs' %></td>-->
			<td><div style="text-align:center;"><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-warning btn-xs' %></div></td>
			<td><div style="text-align:center;">


<%= link_to 'Delete', user, method: :delete, data: { header:"User",confirm:(user.firstname)+' ?' },class:'btn btn-danger' %>
 </div></td>
		</tr>
		<% @slno+=1%>
		<% end %>	
	</tbody>
</table>

<%= ajax_will_paginate @users %>
