 <div id="logo">
            <img src="../img/login-logo.png" alt="" />
        </div>
        <div id="loginbox">            
           
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="control-group normal_text"><h3>Vendor Portal Login</h3></div>
                <div class="control-group">
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on"><i class="icon-user"></i></span>
<%= f.email_field :email,required: false, autofocus: true,placeholder:"Email id" %>
</div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on"><i class="icon-lock"></i></span>
<%= f.password_field :password,required: false,placeholder:"Password" %>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                  
									<span class="pull-left"><%= render "devise/shared/links" %></span>
                  <span class="pull-right"><%= f.submit 'Login', :class => 'btn btn-success btn-xs' %></span>
                </div>
            </form>

  
        </div>
<% end %>

