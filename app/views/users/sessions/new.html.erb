
<div id="logo">
			<%= link_to (image_tag "img/login-logo.png"),"#"%>
           
        </div>
        <div id="loginbox">            
          
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="control-group normal_text"><h3>Vendor Portal Login</h3></div>
                <div class="control-group">
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on"><i class="icon-user"></i></span>
<%= f.email_field :email,required: false, autofocus: true,placeholder:"Email id" %>
</div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on"><i class="icon-lock"></i></span>
<%= f.password_field :password,required: false,placeholder:"Password" %>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                  <span class="pull-left"><%= render "devise/shared/links" %></span>
                  <span class="pull-right"><%= f.submit 'Login', :class => 'btn btn-success btn-xs' %></span>
                </div>
            </form>
							<form id="recoverform" action="<%= password_path(resource_name) %>" class="form-vertical">
							 <%= devise_error_messages! %>
				<p class="normal_text">Enter your e-mail address below and we will send you instructions <br/><font color="#FF6633">how to recover a password.</font></p>
				
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on"><i class="icon-envelope"></i></span><input type="text" name="email" placeholder="E-mail address" />
                        </div>
                    </div>
               
                <div class="form-actions">
                    <span class="pull-left"><a href="#" class="flip-link btn btn-warning" id="to-login">&laquo; Back to login</a></span>
                    <span class="pull-right"><input type="submit" class="btn btn-info" name="commit" value="Recover" /></span>
                </div>
            </form>
  
        </div>
<% end %>

