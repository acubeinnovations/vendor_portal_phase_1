<%= simple_form_for @style,  :html => { :multipart => true } do |f| %>
  <%= f.error_notification %>

  
  <div class="widget-box">
          <div class="widget-content nopadding">
            <table class="table table-bordered data-table with-check">
		          <tbody>
								<tr>
									<td class="span6">
											
												<div class="control-group">
												<label class="control-label">Style Name</label>
													<div class="controls">
															<%= f.text_field :stylename, class:"span6",placeholder:"stylename" %>
													</div>
												</div>
												<div class="control-group">
												<label class="control-label">Style Code</label>
													<div class="controls">
															<%= f.text_field :stylecode, class:"span6",placeholder:"Style Code" %>
													</div>
												</div>
												<div class="control-group">
												<label class="control-label">Image</label>
													<div class="controls">	
															<% if @style.image.url!='/images/original/missing.png' %>
															<%= image_tag @style.image.url(:small)  %>
															<%	end			 %>
															<%= f.file_field :image, class:"span6" %>
													</div>
												
				
									</td>
									<td class="span6">
											<% @UT=Usertype.all() %> 
											<% @UT.each do |usertype|  %>
											<% if usertype.userrole!='admin'  %>
											<% @U=User.all('userrole'=>usertype.userrole) %>
											<div class="widget-box">
                 				 	<div class="widget-title"><span class="icon"><i class="icon-file"></i></span>
                   				 	<h5><%= usertype.userrole.titleize %></h5>
                    			</div>
													<div class="widget-content nopadding">
										  <% @U.each do |user|  %>
												
														<span class="span3">
															<!--<div class="controls">
																<label>
																	<div id="uniform-undefined" class="checker">
																		<span>
																			<input style="opacity: 0;" name="users[]" type="checkbox">
																		</span>
																	</div> 
																	<%= user.email %>
															 	</label>
															</div>-->
														
															<input name="users[]" type="checkbox" value="<%= user.email %>">	<%= user.email %>
														</span>
													
												<% end %>
											</div>
										</div><br>
										<% end %>
									<% end %>
									</td>	
								</tr>
		           </tbody>
            </table>
				</div>
      </div>
  <div class="form-actions">
  		<%= f.submit 'Save', :class => 'btn btn-success btn-xs' %>
  	</div>  
  </div>

  
<% end %>

