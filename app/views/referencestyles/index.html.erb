<p id="notice"><%= notice %></p>

<h1>Listing Referencestyles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @referencestyles.each do |referencestyle| %>
      <tr>
        <td><%= referencestyle.name %></td>
        <td><%= link_to 'Show', referencestyle %></td>
        <td><%= link_to 'Edit', edit_referencestyle_path(referencestyle) %></td>
        <td><%= link_to 'Destroy', referencestyle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

